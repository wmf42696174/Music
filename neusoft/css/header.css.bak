             .box{
				width:960px;
				background-color: white;
				padding-top: 20px;
				margin:0 auto;
				
			}
			.box .header{
				width:900px;
				height:85px;
				margin:0 auto;
				
			}
			.box .header .logo{
				width:135px;
				height:50px;
				float: left;
				margin-left: 10px;
				border:none;
				margin-top: ;
			}
			.box .header .right{
				width:435px;
				height:50px;
				float:right;
				margin-top: 25px;
			}
			.box .header .right .r_menu{
				width:320px;
				height:25px;
				float:left;
				padding-right: 5px;
				background: url(http://www.neusoft.com/cn/newstyle/images/header_top_menu.gif) no-repeat right;
			}
			.box .header .right .r_menu a{
				display: inline-block;
				height: 25px;
				line-height: 25px;
				font-size: 13px;
				text-decoration: none;
				color:#555;
			}
			.box .header .right .r_sel{
				width:80px;
				height:23px;
				float:right;
				color:#555;
				font-size: 13px;
				line-height: 23px;
				text-align: center;
				cursor:pointer;
				position: relative;
			}
			.box .header .right .r_sel .lanunge_show{
				width:150px;
				height:90px;
				background: #fff;
				border-bottom:5px solid #38C ;
				position: absolute;
				top:25px;
				right:0px;
			    display: none;
			}
			.box .header .right .r_sel:hover{
				border-bottom:2px solid #38C ;
				color:#38C;
			}
			.box .header .right .r_sel:hover .lanunge_show{
				display:block;
			}
			.box .header .right .r_sel .lanunge_show dl{
				margin:0px;
				padding:0px;
			}
			.box .header .right .r_sel .lanunge_show dl dt{
				width:100%;
				height:10px;
				color:#555;
				background-color: #F0F0F0;
			}
			.box .header .right .r_sel .lanunge_show dl dd{
				width:100%;
				height:20px;
				text-align: left;				
				text-indent: 25px;
				display: block;
				margin-left: -10px;;
			}
			.box .header .right .r_sel .lanunge_show dl dd a{
				text-decoration: none;
				color: #555;
			}
			.box .header .right .r_sel .lanunge_show dl dd a:hover{
				color:turquoise;
				text-decoration: underline;
			}
			.box .header .right .r_serach{
				width:250px;
				height:15px;
				border:1px solid #555;
				border-radius: 3px;
				float:right;
				margin-top: 3px;
				font-size: 12px;
				color:silver;
				
			}
			.box .header .right .r_serach .sear{
				display:inline-block;
				width:220px;
				height:12px;
				border: none;
				
			}
			.box .header .right .r_serach .btn{
				display:inline-block;
				border:none;
				width:20px;
				height:13px;
				background-color: transparent;
				background: url(http://www.neusoft.com/cn/images/search.gif);
			}